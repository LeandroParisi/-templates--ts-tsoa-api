{
  "name": "express-swagger-api",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "scripts": {
    "test": "yarn env:test mocha -r ts-node/register ./src/tests/**/*.spec.ts",
    "start": "yarn start:dev",
    "start:dev": "yarn build:routes && yarn build:swagger && yarn env:dev ts-node-dev --respawn ./src",
    "start:prod": "yarn env:prod node ./dist/src/index.js",
    "build:routes": "tsoa routes",
    "build:swagger": "tsoa swagger --basePath /api",
    "build:prod": "yarn clean && yarn build:routes && yarn build:swagger && tsc && yarn copy",
    "clean": "rimraf ./dist",
    "copy": "yarn copy:swagger && yarn copy:env",
    "copy:swagger": "cp -R ./build/swagger ./dist/build/swagger",
    "copy:env": "cp -R ./src/config/env ./dist/src/config/env",
    "env:dev": "cross-env NODE_ENV=development",
    "env:test": "cross-env NODE_ENV=test",
    "env:prod": "cross-env NODE_ENV=production"
  },
  "author": "dgeslin",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "express-winston": "^2.5.0",
    "inversify": "^4.10.0",
    "inversify-binding-decorators": "^3.2.0",
    "mongoose": "^5.0.11",
    "mongoose-unique-validator": "^2.0.0",
    "reflect-metadata": "^0.1.12",
    "requestify": "^0.2.5",
    "swagger-ui-express": "^3.0.6",
    "tsoa": "^2.1.1",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/api-error-handler": "^1.0.31",
    "@types/chai": "^4.1.2",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/mocha": "^2.2.48",
    "@types/mongoose": "^5.0.2",
    "@types/mongoose-unique-validator": "^1.0.1",
    "chai": "^4.1.2",
    "cross-env": "^5.1.4",
    "mocha": "^5.0.1",
    "ts-node": "^4.1.0",
    "ts-node-dev": "^1.0.0-pre.15",
    "typescript": "^2.7.2",
    "yarn": "^1.3.2"
  }
}
